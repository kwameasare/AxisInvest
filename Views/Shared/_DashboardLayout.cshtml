<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Axis Client Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#1A243D;">
            <div class="container">
                <a class="navbar-brand text-white" href="javascript:void()">
                    Axis Client Portal
                </a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars" style="color: white;"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ml-auto ">

                        <li class="nav-item dropdown">
                            <div class="row dropdown-toggle mr-6" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                <a class="nav-link text-white " style="padding-left: 10px; padding-right: 5px;" href="javascript:void()">Account  </a>
                                <img style="height: 50px; width: 50px;" class='img-thumbnail circle dropdown-toggle' src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" />
                            </div>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item">Go Home</a>
                                <a href="javascript.void(0)" class="dropdown-item">Change Password</a>
                                <!-- <a class="dropdown-item" href="javascript:void()">Profile</a> -->
                                @Html.ActionLink("Log Out", "Login", "Authentication", new { area = "" }, new { @class = "dropdown-item" })

                            </div>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content ">

        @RenderBody()
        <hr />
        <footer class="mt-4 text-center">
            <p>&copy; @DateTime.Now.Year - Axis Client Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
