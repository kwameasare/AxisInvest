@model Invest.Models.Auth

@{
    ViewBag.Title = "Login";
}

<div class="col-md-8 mr-auto ml-auto">
    

    <div class="card" style="border-radius: 12px">
       
        <div class="card-text">
            <div class="portada">
    
            </div>
            <div class="container-fluid">
                
                <div class="col-md-9 title-total ml-auto mr-auto">   
                    
                    <h4 class=" text-center card-title mb-1">
                        Welcome Back
                    </h4>

                    <p class="mt-4 card-subtitle text-center text-xs text-muted">Enter Your Username And Password.</p>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class=" ">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.UserName, "", new {@class = "form-control", @placeholder = "Username", required = "required", })

                            </div>
                            <div class="form-group">

                                @Html.PasswordFor(m => m.Pwd, new {@class = "form-control", @placeholder = "Password", required = "required", type="password" })
                            </div>
                            <div class="form-group mt-5">
                                <input type="submit" class="btn btn-success btn-block " value="Login"/>
                            </div>

                            <p class="text-center text-muted text-custom-small">OR</p>


                            <div class="form-group">

                                @Html.ActionLink("Sign Up", "Validate", "Authentication", new {area = ""}, new {@class = "btn  btn-dark btn-block"})

                            </div>

                            <div class=" text-center mt-5">

                                <p class="text-xs text-center text-muted">
                                    By signing in you agree to Axis'
                                    <a href="#">Terms and Conditions</a> and
                                    <a href="#">Privacy Policy</a>.
                                </p>

                            </div>


                        }
                    </div>
                
  
                
                </div>
            </div>
 
        </div>
  
 
  
    </div>
   

</div>
